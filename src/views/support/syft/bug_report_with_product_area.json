{
  "private_metadata": "support_bug",
  "title": {
    "type": "plain_text",
    "text": "New Bug Report"
  },
  "submit": {
    "type": "plain_text",
    "text": "Submit"
  },
  "blocks": [
    {
      "type": "input",
      "block_id": "sl_title_block",
      "element": {
        "type": "plain_text_input",
        "action_id": "sl_title",
        "placeholder": {
          "type": "plain_text",
          "text": "One line summary, e.g. Employer id 1234 can't post a shift"
        }
      },
      "label": {
        "type": "plain_text",
        "text": "Summary"
      },
      "hint": {
        "type": "plain_text",
        "text": "Using words such as Employer, Worker, ACP, App helps to identify the problem."
      }
    },

    {
      "type": "input",
      "block_id": "ml_description_block",
      "element": {
        "type": "plain_text_input",
        "action_id": "ml_description",
        "multiline": true,
        "placeholder": {
          "type": "plain_text",
          "text": "Bullet point steps to reproduce the issue. \nPlease include specifics, e.g. ACP or portal url, employer, shift or worker id."
        }
      },
      "label": {
        "type": "plain_text",
        "text": "Steps to reproduce"
      },
      "hint": {
        "type": "plain_text",
        "text": "You can attach screenshots in slack thread later."
      }
    },

    {
      "type": "input",
      "block_id": "sl_currently_block",
      "element": {
        "type": "plain_text_input",
        "action_id": "sl_currently",
        "placeholder": {
          "type": "plain_text",
          "text": "What *currently* happens when the above steps are taken?"
        }
      },
      "label": {
        "type": "plain_text",
        "text": "Current Outcome"
      }
    },

    {
      "type": "input",
      "block_id": "sl_expected_block",
      "element": {
        "type": "plain_text_input",
        "action_id": "sl_expected",
        "placeholder": {
          "type": "plain_text",
          "text": "What *should* happen when the above steps are taken?"
        }
      },
      "label": {
        "type": "plain_text",
        "text": "Expected Outcome"
      }
    },

    {
      "type": "input",
      "block_id": "ss_product_area_block",
      "element": {
        "action_id": "ss_product_area",
        "type": "static_select",
        "placeholder": {
          "type": "plain_text",
          "text": "Please select the affected product area"
        },
        "options": [
          {
            "text": {
              "type": "plain_text",
              "text": "Agency"
            },
            "value": "agency"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "Client"
            },
            "value": "client"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "Hiring"
            },
            "value": "hiring"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "Fulfilment"
            },
            "value": "fulfilment"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "Time & Attendance"
            },
            "value": "time_and_attendance"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "Pay"
            },
            "value": "pay"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "Platform & Enabling"
            },
            "value": "platform_and_enabling"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "Other"
            },
            "value": "other"
          }
        ]
      },
      "label": {
        "type": "plain_text",
        "text": "Product Area"
      }
    },

    {
      "type": "input",
      "block_id": "ss_urgency_block",
      "element": {
        "action_id": "ss_urgency",
        "type": "static_select",
        "placeholder": {
          "type": "plain_text",
          "text": "Please select"
        },
        "options": [
          {
            "text": {
              "type": "plain_text",
              "text": "Yes"
            },
            "value": "yes"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "No"
            },
            "value": "no"
          }
        ],
        "initial_option": {
          "text": {
            "type": "plain_text",
            "text": "No"
          },
          "value": "no"
        }
      },
      "label": {
        "type": "plain_text",
        "text": "Urgent"
      }
    },

    {
      "type": "input",
      "block_id": "ms_platform_block",
      "element": {
        "action_id": "ms_platform",
        "type": "multi_static_select",
        "placeholder": {
          "type": "plain_text",
          "text": "Select platforms/devices"
        },
        "options": [
          {
            "text": {
              "type": "plain_text",
              "text": "ACP"
            },
            "value": "acp"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "Agency Portal"
            },
            "value": "agency_portal"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "Android"
            },
            "value": "android"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "Client App"
            },
            "value": "client_app"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "Client Portal"
            },
            "value": "client_portal"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "Inspector"
            },
            "value": "inspector"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "iOS"
            },
            "value": "ios"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "Worker App"
            },
            "value": "worker_app"
          }
        ]
      },
      "label": {
        "type": "plain_text",
        "text": "Platform/Device"
      }
    },

    {
      "type": "input",
      "block_id": "ss_region_block",
      "element": {
        "action_id": "ss_region",
        "type": "static_select",
        "placeholder": {
          "type": "plain_text",
          "text": "Please select"
        },
        "options": [
          {
            "text": {
              "type": "plain_text",
              "text": "UK"
            },
            "value": "uk"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "US"
            },
            "value": "us"
          }
        ]
      },
      "label": {
        "type": "plain_text",
        "text": "Region/Country"
      }
    },

    {
      "type": "input",
      "block_id": "sl_version_block",
      "element": {
        "type": "plain_text_input",
        "action_id": "sl_version",
        "placeholder": {
          "type": "plain_text",
          "text": "E.g. iOS version 2.2.18, iOS max"
        }
      },
      "label": {
        "type": "plain_text",
        "text": "App version"
      },
      "optional": true
    },

    {
      "type": "input",
      "block_id": "sl_employer_block",
      "element": {
        "type": "plain_text_input",
        "action_id": "sl_employer",
        "placeholder": {
          "type": "plain_text",
          "text": "1234"
        }
      },
      "label": {
        "type": "plain_text",
        "text": "Employer ID"
      },
      "optional": true
    },

    {
      "type": "input",
      "block_id": "sl_worker_block",
      "element": {
        "type": "plain_text_input",
        "action_id": "sl_worker",
        "placeholder": {
          "type": "plain_text",
          "text": "1234"
        }
      },
      "label": {
        "type": "plain_text",
        "text": "Worker ID"
      },
      "optional": true
    },

    {
      "type": "input",
      "block_id": "sl_listing_block",
      "element": {
        "type": "plain_text_input",
        "action_id": "sl_listing",
        "placeholder": {
          "type": "plain_text",
          "text": "1234"
        }
      },
      "label": {
        "type": "plain_text",
        "text": "Listing ID"
      },
      "optional": true
    },

    {
      "type": "input",
      "block_id": "sl_shift_block",
      "element": {
        "type": "plain_text_input",
        "action_id": "sl_shift",
        "placeholder": {
          "type": "plain_text",
          "text": "1234"
        }
      },
      "label": {
        "type": "plain_text",
        "text": "Shift ID"
      },
      "optional": true
    },

    {
      "type": "input",
      "block_id": "sl_test_data_block",
      "element": {
        "type": "plain_text_input",
        "action_id": "sl_test_data",
        "placeholder": {
          "type": "plain_text",
          "text": "Employer ID, Worker ID, Shift ID, Listing ID or names."
        }
      },
      "label": {
        "type": "plain_text",
        "text": "Test data"
      },
      "optional": true
    }
  ],
  "type": "modal"
}
